              - var indexOfFirst = ourl.indexOf("/")
              - var indexOfSecond = ourl.indexOf("/", (indexOfFirst + 1))
              - var enduri = ourl.substring(indexOfSecond);
              ul.languages-panel-con
                each elang in langs
                  if elang != lang
                    li
                      a(href='/'+elang+enduri)
                        case elang
                          when "fr"
                            = trads.t5c5d2a0675254800049b22d6
                          when "en"
                            = trads.t5c5d2a0cf52f110004a93aaa
