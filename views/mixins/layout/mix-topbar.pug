            - var langs = ['en','fr','es']
            span
              i.ico-globe4
              each elang in langs
                if elang == lang
                  case elang
                    when "fr"
                      span= trads.t5c5d2a0675254800049b22d6
                    when "en"
                      span= trads.t5c5d2a0cf52f110004a93aaa
                    when "es"
                      | Spanish
