mixin mix_footer
  // footer
  footer#footer
    .container.row_spacer.clearfix
      .rows_container.clearfix
        .col-md-3
          .footer_row
            h6.footer_title= trads.t5fc5f834b4b8eb1f1e43594f
            ul.recent_posts_list
              each actu,index in footer.news
                if index < 3
                  li.clearfix
                    - var uri = encodeURIComponent(actu.p5c332d0b07c805cd14cf1ef5)
                    a(href='/'+lang+'/7_110/'+actu._id+'/'+uri+'.html')
