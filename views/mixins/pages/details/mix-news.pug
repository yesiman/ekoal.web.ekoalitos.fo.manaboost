                                    - dates = " to " + moment(r.p5c332db507c805cd14cf2d7b).format('DD/MM/YYYY')
                        if addIn == true
                            li
                                - var loldId = -1;
                                case r.proto[0]
                                    when "5c2c4dea07c805cd14b33488"
                                        - loldId = "113" //PROJETS
                                    when "5c2c4de807c805cd14b3345c"
                                        - loldId = "108" //PLAYERS
                                    when "5c2c4de807c805cd14b33449"
                                        - loldId = "102" //DOCS
                                    when "5c2c4dea07c805cd14b3349f"
                                        - loldId = "114" //INNOVATIONS
                                    when "5c2c4de907c805cd14b33478"
                                        - loldId = "110" //ACTUS
