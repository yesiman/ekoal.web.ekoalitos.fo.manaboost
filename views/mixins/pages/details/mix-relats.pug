include ../../pages/details/mix-sidebar-relat.pug
mixin mix-relats
    block append styles
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.0.3/nouislider.min.css')
    if allRelats
        section.content_section.bg_gray
            .content.row_spacer.no_padding
                .main_title.centered.upper
                    h2
                        span.line
                        | Relations
                .card
                    .card-body(style="position:relative;overflow:hidden;")
                        #relat(style="width:100%;height:600px;")    
                            +mix-sidebar-relat
    block append scripts
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.0.3/nouislider.min.js")